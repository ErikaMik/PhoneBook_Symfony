{% extends 'base.html.twig' %}
{% block body %}
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <div class="card bg-light">
                <div class="card-body">
                    <h1 class="text-center">Add contact</h1>
                    {{ form_start(form) }}
                    <div class="mt-3">
                        <label>Name</label>{{ form_widget(form.name) }}
                    </div>
                    <div class="mt-3">
                        <label>Phone number</label>{{ form_widget(form.number) }}
                    </div>
                    <button type="submit" name="contacts[save]" id="contacts_save" class="btn btn-info mt-4">SAVE</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}